{
  "name": "typed-models",
  "version": "0.91.4",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest ./tests",
    "lint": "eslint",
    "codecov": "codecov",
    "pkgver": "node -p -e \"require('./package.json').version\"",
    "tag:release": "git -c 'user.name=$(git show -s --format=%an' -c 'user.email=$(git show -s --format=%ae)' tag -a $(yarn -s pkgver) -m \"v$(yarn -s pkgver) release\"",
    "release": "yarn publish --non-interactive"
  },
  "author": "Mateusz Klos",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/novopl/json-models.git"
  },
  "directories": {
    "lib": "./",
    "test": "./test"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "rules": {
      "require-atomic-updates": "off",
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "dependencies": {
    "jsonschema": "^1.2.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.7.2",
    "eslint": "^7.7.0",
    "faker": "^5.0.0",
    "jest": "^26.4.2"
  }
}
